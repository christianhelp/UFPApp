<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/United_Federations"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ufp"
        android:contentDescription="@string/ufp_description"

        />
    <Button
        android:id="@+id/USS_EnterpriseA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/USS_EnterpriseA"
        android:backgroundTint="@android:color/holo_green_light"
        />

    <Button
        android:id="@+id/USS_EnterpriseD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/USS_EnterpriseD"
        android:backgroundTint="@android:color/holo_green_light"
        />
    <Button
        android:id="@+id/USS_Voyager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:text="@string/USS_Voyager"
        android:backgroundTint="@android:color/holo_green_light"
        />

</LinearLayout>